<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script>
  $(document).ready(function () {
    $('#sidebarCollapse').on('click', function () {
      $('#sidebar').toggleClass('active');
      $('.main-content').toggleClass('sidebar-active');
      $('body').toggleClass('sidebar-active');
    });

    var currentPage = 1;
    var totalPages = $('.form-page').length;

    $('#nextPage').on('click', function () {
      if (currentPage < totalPages) {
        $('#page' + currentPage).removeClass('active');
        currentPage++;
        $('#page' + currentPage).addClass('active');
      }
    });

    $('#prevPage').on('click', function () {
      if (currentPage > 1) {
        $('#page' + currentPage).removeClass('active');
        currentPage--;
        $('#page' + currentPage).addClass('active');
      }
    });

    $('#resetPage').on('click', function () {
      $('#page' + currentPage).find('input[type="text"]').val('');
    });

    $('.form-page').on('reset', function () {
      $(this).find('input[type="text"]').val('');
    });

    $('#toggleSidebar').on('click', function () {
      $('#sidebar').toggleClass('active');
      $('.main-content').toggleClass('sidebar-active');
      $('body').toggleClass('sidebar-active');
    });
  });
</script>
